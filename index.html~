<script type="text/javascript">
var NEWSCo = document.getElementById("NEWSCo");
var DISPLAYCo = document.getElementById("DISPLAYCo");
var DOWNCo = document.getElementById("DOWNCo");
var CONTACTCo = document.getElementById("CONTACTCo");
var CONTENTS = document.getElementById("contents");
CONTENTS.style.width = document.body.clientWidth - 500;
NEWSCo.className = "appear";

function mouseOver(event)
{
	var src = event.target.id;
	switch(src)
	{
		case "NEWSOp": 
			NEWSCo.className = "appear";
			DISPLAYCo.className = "disappear";
			DOWNCo.className = "disappear";
			CONTACTCo.className = "disappear";
			break;
		case "DISPLAYOp": 
			NEWSCo.className = "disappear";
			DISPLAYCo.className = "appear";
			DOWNCo.className = "disappear";
			CONTACTCo.className = "disappear";
			break;
		case "DOWNOp": 
			NEWSCo.className = "disappear";
			DISPLAYCo.className = "disappear";
			DOWNCo.className = "appear";
			CONTACTCo.className = "disappear";
			break;
		case "CONTACTOp": 
			NEWSCo.className = "disappear";
			DISPLAYCo.className = "disappear";
			DOWNCo.className = "disappear";
			CONTACTCo.className = "appear";
			break;
	}
}
</script>
